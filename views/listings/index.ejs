<% layout("layouts/boilerplate") %>
<body>
    <h3>All Listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 rows-col-sm-1">
        <% for (let listing of allisting) { %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
            <div class="card col">
                <img class="card-img-top" src="<%=listing.image%>" alt="listings_image" style="height:20rem">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <h5 class="card-title"><%= listing.title %></h5>
                    <p class="card-text"><%= listing.description %></p>
                    <p class="card-text"><b>Price: &#8377; <%= listing.price.toLocaleString("en-IN") %>/night</b></p>
                    <p class="card-text">Location: <%= listing.location %>, <%= listing.country %></p>
                </div>
            </div>
            </a>
        <% } %>
    </div>
</body>
